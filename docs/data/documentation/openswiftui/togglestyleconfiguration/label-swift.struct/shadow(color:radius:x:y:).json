: 50) {","                    ForEach(steps, id: \\.self) { radius in","                        Color.blue","                            .shadow(","                                color: .primary,","                                radius: CGFloat(radius),","                                x: CGFloat(offset), y: CGFloat(offset))","                            .overlay {","                                VStack {","                                    Text(\"\\(radius)\")","                                    Text(\"(\\(offset), \\(offset))\")","                                }","                            }","                    }","                }","            }","        }","    }","}"]},{"inlineContent":[],"type":"paragraph"},{"inlineContent":[{"type":"text","text":"The example above uses "},{"isActive":true,"identifier":"doc:\/\/OpenSwiftUI\/documentation\/OpenSwiftUI\/Color\/primary","type":"reference"},{"type":"text","text":" as the color to make the"},{"type":"text","text":" "},{"type":"text","text":"shadow easy to see for the purpose of illustration. In practice,"},{"type":"text","text":" "},{"type":"text","text":"you might prefer something more subtle, like "},{"code":"Color\/gray-8j2b","type":"codeVoice"},{"type":"text","text":"."},{"type":"text","text":" "},{"type":"text","text":"If you don’t specify a color, the method uses a semi-transparent"},{"type":"text","text":" "},{"type":"text","text":"black."}],"type":"paragraph"}]}],"variants":[{"paths":["\/documentation\/openswiftui\/togglestyleconfiguration\/label-swift.struct\/shadow(color:radius:x:y:)"],"traits":[{"interfaceLanguage":"swift"}]}],"identifier":{"interfaceLanguage":"swift","url":"doc:\/\/OpenSwiftUI\/documentation\/OpenSwiftUI\/ToggleStyleConfiguration\/Label-swift.struct\/shadow(color:radius:x:y:)"},"sections":[],"hierarchy":{"paths":[["doc:\/\/OpenSwiftUI\/documentation\/OpenSwiftUI","doc:\/\/OpenSwiftUI\/documentation\/OpenSwiftUI\/ToggleStyleConfiguration","doc:\/\/OpenSwiftUI\/documenta