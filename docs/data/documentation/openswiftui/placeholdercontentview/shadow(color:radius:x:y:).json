e":false,"beta":false,"deprecated":false,"introducedAt":"1.0","name":"visionOS"},{"unavailable":false,"beta":false,"deprecated":false,"introducedAt":"6.0","name":"watchOS"}],"remoteSource":{"url":"https:\/\/github.com\/OpenSwiftUIProject\/OpenSwiftUI\/blob\/main\/Sources\/OpenSwiftUICore\/Render\/RendererEffect\/ShadowEffect.swift#L153","fileName":"ShadowEffect.swift"},"modules":[{"relatedModules":["OpenSwiftUICore"],"name":"OpenSwiftUI"}],"extendedModule":"OpenSwiftUICore","role":"symbol"},"variants":[{"traits":[{"interfaceLanguage":"swift"}],"paths":["\/documentation\/openswiftui\/placeholdercontentview\/shadow(color:radius:x:y:)"]}],"primaryContentSections":[{"declarations":[{"languages":["swift"],"platforms":["macOS"],"tokens":[{"kind":"attribute","text":"nonisolated"},{"kind":"text","text":" "},{"kind":"keyword","text":"func"},{"kind":"text","text":" "},{"kind":"identifier","text":"shadow"},{"kind":"text","text":"("},{"kind":"externalParam","text":"color"},{"kind":"text","text":": "},{"kind":"typeIdentifier","text":"Color","identifier":"doc:\/\/OpenSwiftUI\/documentation\/OpenSwiftUI\/Color","preciseIdentifier":"s:15OpenSwiftUICore5ColorV"},{"kind":"text","text":" = Color(.sRGBLinear, white: 0, opacity: 0.33), "},{"kind":"externalParam","text":"radius"},{"text":": ","kind":"text"},{"preciseIdentifier":"s:14CoreFoundation7CGFloatV","text":"CGFloat","kind":"typeIdentifier"},{"text":", ","kind":"text"},{"text":"x","kind":"externalParam"},{"text":": ","kind":"text"},{"preciseIdentifier":"s:14CoreFoundation7CGFloatV","text":"CGFloat","kind":"typeIdentifier"},{"text":" = 0, ","kind":"text"},{"text":"y","kind":"externalParam"},{"text":": ","kind":"text"},{"preciseIdentifier":"s:14CoreFoundation7CGFloatV","text":"CGFloat","kind":"typeIdentifier"},{"kind":"text","text":" = 0) -> "},{"kind":"keyword","text":"some"},{"kind":"text","text":" "},{"kind":"typeIdentifier","text":"View","identifier":"doc:\/\/OpenSwiftUI\/documentation\/OpenSwiftUI\/View","preciseIdentifier":"s:15OpenSwiftUICore4ViewP"},{"kind":"text","text":"\n"}]}],"kind":"declarations"},{"kind":"parameters","parameters":[{"name":"color","content":[{"inlineContent":[{"type":"text","text":"The shadow’s color."}],"type":"paragraph"}]},{"name":"radius","content":[{"type":"paragraph","inlineContent":[{"type":"text","text":"A measure of how much to blur the shadow. Larger values"},{"type":"text","text":" "},{"type":"text","text":"result in more blur."}]}]},{"name":"x","content":[{"type":"paragraph","inlineContent":[{"text":"An amount to offset the shadow horizontally from the view.","type":"text"}]}]},{"name":"y","content":[{"inlineContent":[{"text":"An amount to offset the shadow vertically from the view.","type":"text"}],"type":"paragraph"}]}]},{"kind":"content","content":[{"anchor":"return-value","type":"heading","level":2,"text":"Return Value"},{"type":"paragraph","inlineContent":[{"type":"text","text":"A view that adds a shadow to this view."}]}]},{"kind":"content","content":[{"level":2,"text":"Discussion","anchor":"discussion","type":"heading"},{"inlineContent":[{"type":"text","text":"Use this modifier to add a shadow of a specified color behind a view."},{"type":"text","text":" "},{"type":"text","text":"You can offset the shadow from its view independently in the horizontal"},{"type":"text","text":" "},{"type":"text","text":"and vertical dimensions using the "},{"type":"codeVoice","code":"x"},{"type":"text","text":" and "},{"type":"codeVoice","code":"y"},{"type":"text","text":" parameters. You can also"},{"type":"text","text":" "},{"type":"text","text":"blur the edges of the shadow using the "},{"type":"codeVoice","code":"radius"},{"type":"text","text":" parameter. Use a"},{"type":"text","text":" "},{"type":"text","text":"radius of zero to create a sharp shadow. Larger radius values produce"},{"type":"text","text":" "},{"type":"text","text":"softer shadows."}],"type":"paragraph"},{"inlineContent":[{"type":"text","text":"The example below creates a grid of boxes with varying offsets and blur."},{"type":"text","text":" "},{"type":"text","text":"Each box displays its radius and offset values for reference."}],"type":"paragraph"},{"syntax":"swift","code":["struct Shadow: View {","    let steps = [0, 5, 10]","","    var body: some View {","        VStack(spacing: 50) {","            ForEach(steps, id: \\.self) { offset in","                HStack(spacing: 50) {","                    ForEach(steps, id: \\.self) { radius in","                        Color.blue","                            .shadow(","                                color: .primary,","                                radius: CGFloat(radius),","                                x: CGFloat(offset), y: CGFloat(offset))","                            .overlay {","                                VStack {","                                    Text(\"\\(radius)\")","                                    Text(\"(\\(offset), \\(offset))\")","                                }","                            }","                    }","                }","            }","        }","    }","}"],"type":"codeListing"},{"inlineContent":[],"type":"paragraph"},{"inlineContent":[{"type":"text","text":"The example above uses "},{"identifier":"doc:\/\/OpenSwiftUI\/documentation\/OpenSwiftUI\/Color\/primary","type":"reference","isActive":true},{"type":"text","text":" as the color to make the"},{"type":"text","text":" "},{"type":"text","text":"shadow easy to see for the purpose of illustration. In practice,"},{"type":"text","text":" "},{"type":"text","text":"you might prefer something more subtle, like "},{"type":"codeVoice","code":"Color\/gray-8j2b"},{"type":"text","text":"."},{"type":"text","text":" "},{"type":"text","text":"If you don’t specify a color, the method uses a semi-transparent"},{"type":"text","text":" "},{"type":"text","text":"black."}],"type":"paragraph"}]}],"schemaVersion":{"major":0,"minor":3,"patch":0},"references":{"doc://OpenSwiftUI/documentation/OpenSwiftUI/PlaceholderContentVi