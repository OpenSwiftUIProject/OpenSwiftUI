{"schemaVersion":{"major":0,"patch":0,"minor":3},"primaryContentSections":[{"kind":"declarations","declarations":[{"languages":["swift"],"platforms":["macOS"],"tokens":[{"kind":"attribute","text":"nonisolated"},{"kind":"text","text":" "},{"kind":"keyword","text":"func"},{"kind":"text","text":" "},{"kind":"identifier","text":"shadow"},{"kind":"text","text":"("},{"kind":"externalParam","text":"color"},{"kind":"text","text":": "},{"kind":"typeIdentifier","text":"Color","preciseIdentifier":"s:15OpenSwiftUICore5ColorV","identifier":"doc:\/\/OpenSwiftUI\/documentation\/OpenSwiftUI\/Color"},{"kind":"text","text":" = Color(.sRGBLinear, white: 0, opacity: 0.33), "},{"kind":"externalParam","text":"radius"},{"kind":"text","text":": "},{"kind":"typeIdentifier","text":"CGFloat","preciseIdentifier":"s:14CoreFoundation7CGFloatV"},{"kind":"text","text":", "},{"kind":"externalParam","text":"x"},{"kind":"text","text":": "},{"kind":"typeIdentifier","text":"CGFloat","preciseIdentifier":"s:14CoreFoundation7CGFloatV"},{"kind":"text","text":" = 0, "},{"kind":"externalParam","text":"y"},{"kind":"text","text":": "},{"kind":"typeIdentifier","text":"CGFloat","preciseIdentifier":"s:14CoreFoundation7CGFloatV"},{"kind":"text","text":" = 0) -> "},{"kind":"keyword","text":"some"},{"kind":"text","text":" "},{"kind":"typeIdentifier","text":"View","preciseIdentifier":"s:15OpenSwiftUICore4ViewP","identifier":"doc:\/\/OpenSwiftUI\/documentation\/OpenSwiftUI\/View"},{"kind":"text","text":"\n"}]}]},{"kind":"parameters","parameters":[{"content":[{"type":"paragraph","inlineContent":[{"type":"text","text":"The shadow’s color."}]}],"name":"color"},{"content":[{"inlineContent":[{"type":"text","text":"A measure of how much to blur the shadow. Larger values"},{"type":"text","text":" "},{"type":"text","text":"result in more blur."}],"type":"paragraph"}],"name":"radius"},{"content":[{"inlineContent":[{"text":"An amount to offset the shadow horizontally from the view.","type":"text"}],"type":"paragraph"}],"name":"x"},{"content":[{"type":"paragraph","inlineContent":[{"type":"text","text":"An amount to offset the shadow vertically from the view."}]}],"name":"y"}]},{"kind":"content","content":[{"type":"heading","text":"Return Value","anchor":"return-value","level":2},{"inlineContent":[{"text":"A view that adds a shadow to this view.","type":"text"}],"type":"paragraph"}]},{"kind":"content","content":[{"text":"Discussion","level":2,"anchor":"discussion","type":"heading"},{"inlineContent":[{"text":"Use this modifier to add a shadow of a specified color behind a view.","type":"text"},{"text":" ","type":"text"},{"text":"You can offset the shadow from its view independently in the horizontal","type":"text"},{"text":" ","type":"text"},{"text":"and vertical dimensions using the ","type":"text"},{"code":"x","type":"codeVoice"},{"text":" and ","type":"text"},{"code":"y","type":"codeVoice"},{"text":" parameters. You can also","type":"text"},{"text":" ","type":"text"},{"text":"blur the edges of the shadow using the ","type":"text"},{"code":"radius","type":"codeVoice"},{"text":" parameter. Use a","type":"text"},{"text":" ","type":"text"},{"text":"radius of zero to create a sharp shadow. Larger radius values produce","type":"text"},{"text":" ","type":"text"},{"text":"softer shadows.","type":"text"}],"type":"paragraph"},{"inlineContent":[{"text":"The example below creates a grid of boxes with varying offsets and blur.","type":"text"},{"text":" ","type":"text"},{"text":"Each box displays its radius and offset values for reference.","type":"text"}],"type":"paragraph"},{"code":["struct Shadow: View {","    let steps = [0, 5, 10]","","    var body: some View {","        VStack(spacing: 50) {","            ForEach(steps, id: \\.self) { offset in","                HStack(spacing: 50) {","                    ForEach(steps, id: \\.self) { radius in","                        Color.blue","                            .shadow(","                                color: .primary,","                                radius: CGFloat(radius),","                                x: CGFloat(offset), y: CGFloat(offset))","                            .overlay {","                                VStack {","                                    Text(\"\\(radius)\")","                                    Text(\"(\\(offset), \\(offset))\")","                                }","                            }","                    }","                }","            }","        }","    }","}"],"syntax":"swift","type":"codeListing"},{"inlineContent":[],"type":"paragraph"},{"inlineContent":[{"text":"The example above uses ","type":"text"},{"identifier":"doc:\/\/OpenSwiftUI\/documentation\/OpenSwiftUI\/Color\/primary","isActive":true,"type":"reference"},{"text":" as the color to make the","type":"text"},{"text":" ","type":"text"},{"text":"shadow easy to see for the purpose of illustration. In practice,","type":"text"},{"text":" ","type":"text"},{"text":"you might prefer something more subtle, like ","type":"text"},{"code":"Color\/gray-8j2b","type":"codeVoice"},{"text":".","type":"text"},{"text":" ","type":"text"},{"text":"If you don’t specify a color, the method uses a semi-transparent","type":"text"},{"text":" ","type":"text"},{"text":"black.","type":"text"}],"type":"paragraph"}]}],"identifier":{"url":"doc:\/\/OpenSwiftUI\/documentation\/OpenSwiftUI\/Color\/shadow(color:radius:x:y:)","interfaceLanguage":"swift"},"kind":"symbol","variants":[{"paths":["\/documentation\/openswiftui\/color\/shadow(color:radius:x:y:)"],"traits":[{"interfaceLanguage":"swift"}]}],"abstract":[{"text":"Adds a shadow to this view.","type":"text"}],"sections":[],"hierarchy":{"paths":[["doc:\/\/OpenSwiftUI\/documentation\/OpenSwiftUI","doc:\/\/OpenSwiftUI\/documentation\/OpenSwiftUI\/Color"]]},"metadata":{"role":"symbol","title":"shadow(color:radius:x:y:)","platforms":[{"name":"iOS","introducedAt":"13.0","deprecated":false,"unavailable":false,"beta":false},{"name":"macOS","introducedAt":"10.15","deprecated":false,"unav