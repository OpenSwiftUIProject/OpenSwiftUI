{"hierarchy":{"paths":[["doc:\/\/OpenSwiftUI\/documentation\/OpenSwiftUI","doc:\/\/OpenSwiftUI\/documentation\/OpenSwiftUI\/ModifiedContent"]]},"metadata":{"modules":[{"relatedModules":["OpenSwiftUICore"],"name":"OpenSwiftUI"}],"remoteSource":{"url":"https:\/\/github.com\/OpenSwiftUIProject\/OpenSwiftUI\/blob\/main\/Sources\/OpenSwiftUICore\/Render\/RendererEffect\/RendererEffect.swift#L304","fileName":"RendererEffect.swift"},"role":"symbol","roleHeading":"Instance Method","fragments":[{"kind":"keyword","text":"func"},{"kind":"text","text":" "},{"kind":"identifier","text":"geometryGroup"},{"kind":"text","text":"() -> "},{"kind":"keyword","text":"some"},{"kind":"text","text":" "},{"kind":"typeIdentifier","preciseIdentifier":"s:15OpenSwiftUICore4ViewP","text":"View"}],"symbolKind":"method","extendedModule":"OpenSwiftUICore","platforms":[{"beta":false,"name":"iOS","deprecated":false,"introducedAt":"13.0","unavailable":false},{"beta":false,"name":"macOS","deprecated":false,"introducedAt":"10.15","unavailable":false},{"beta":false,"name":"tvOS","deprecated":false,"introducedAt":"13.0","unavailable":false},{"beta":false,"name":"visionOS","deprecated":false,"introducedAt":"1.0","unavailable":false},{"beta":false,"name":"watchOS","deprecated":false,"introducedAt":"6.0","unavailable":false}],"externalID":"s:15OpenSwiftUICore4ViewPAAE13geometryGroupQryF::SYNTHESIZED::s:15OpenSwiftUICore15ModifiedContentV","title":"geometryGroup()"},"identifier":{"url":"doc:\/\/OpenSwiftUI\/documentation\/OpenSwiftUI\/ModifiedContent\/geometryGroup()","interfaceLanguage":"swift"},"primaryContentSections":[{"declarations":[{"tokens":[{"text":"nonisolated","kind":"attribute"},{"text":" ","kind":"text"},{"text":"func","kind":"keyword"},{"text":" ","kind":"text"},{"text":"geometryGroup","kind":"identifier"},{"text":"() -> ","kind":"text"},{"text":"some","kind":"keyword"},{"text":" ","kind":"text"},{"text":"View","identifier":"doc:\/\/OpenSwiftUI\/documentation\/OpenSwiftUI\/View","kind":"typeIdentifier","preciseIdentifier":"s:15OpenSwiftUICore4ViewP"},{"text":"\n","kind":"text"}],"languages":["swift"],"platforms":["macOS"]}],"kind":"declarations"},{"content":[{"level":2,"anchor":"discussion","text":"Discussion","type":"heading"},{"inlineContent":[{"text":"By default OpenSwiftUI views push position and size changes down","type":"text"},{"text":" ","type":"text"},{"text":"through the view hierarchy, so that only views that draw","type":"text"},{"text":" ","type":"text"},{"text":"something (known as leaf views) apply the current animation to","type":"text"},{"text":" ","type":"text"},{"text":"their frame rectangle. However in some cases this coalescing","type":"text"},{"text":" ","type":"text"},{"text":"behavior can give undesirable results; inserting a geometry","type":"text"},{"text":" ","type":"text"},{"text":"group can correct that. A group acts as a barrier between the","type":"text"},{"text":" ","type":"text"},{"text":"parent view and its subviews, forcing the position and size","type":"text"},{"text":" ","type":"text"},{"text":"values to be resolved and animated by the parent, before being","type":"text"},{"text":" ","type":"text"},{"text":"passed down to each subview.","type":"text"}],"type":"paragraph"},{"inlineContent":[{"type":"text","text":"The example below shows one use of this function: ensuring that"},{"type":"text","text":" "},{"type":"text","text":"the member views of each row in the stack apply (and animate"},{"type":"text","text":" "},{"type":"text","text":"as) a single geometric transform from their ancestor view,"},{"type":"text","text":" "},{"type":"text","text":"rather than letting the effects of the ancestor views be"},{"type":"text","text":" "},{"type":"text","text":"applied separately to each leaf view. If the members of"},{"type":"text","text":" "},{"type":"codeVoice","code":"ItemView"},{"type":"text","text":" may be added and removed at different times the"},{"type":"text","text":" "},{"type":"text","text":"group ensures that they stay locked together as animations are"},{"type":"text","text":" "},{"type":"text","text":"applied."}],"type":"paragraph"},{"syntax":"swift","code":["VStack {","    ForEach(items) { item in","        ItemView(item: item)","            .geometryGroup()","    }","}"],"type":"codeListing"},{"inlineContent":[{"text":"Returns: a new view whose geometry is isolated from that of its","type":"text"},{"text":" ","type":"text"},{"text":"parent view.","type":"text"}],"type":"paragraph"}],"kind":"content"}],"sections":[],"abstract":[{"type":"text","text":"Isolates the geometry (e.g. position and size) of the view"},{"type":"text","text":" "},{"type":"text","text":"from its parent view."}],"variants":[{"traits":[{"interfaceLanguage":"swift"}],"paths":["\/documentation\/openswiftui\/modifiedcontent\/geometrygroup()"]}],"kind":"symbol","schemaVersion":{"minor":3,"patch":0,"major":0},"references":{"doc://OpenSwiftUI/documentation/OpenSwiftUI/View":{"url":"\/documentation\/openswiftui\/view","abstract":[{"type":"text","text":"A type that represents part of your appâ€™s user interface and provides"},{"type":"text","text":" "},{"type":"text","text":"modifiers that you use to configure views."}],"role":"symbol","identifier":"doc:\/\/OpenSwiftUI\/documentation\/OpenSwiftUI\/View","title":"View","type":"topic","fragments":[{"text":"protocol","kind":"keyword"},{"text":" ","kind":"text"},{"text":"View","kind":"identifier"}],"navigatorTitle":[{"text":"View","kind":"identifier"}],"kind":"symbol"},"doc://OpenSwiftUI/documentation/OpenSwiftUI/ModifiedContent":{"url":"\/documentation\/openswiftui\/modifiedcontent","navigatorTitle":[{"text":"ModifiedContent","kind":"identifier"}],"role":"symbol","fragments":[{"text":"struct","kind":"keyword"},{"text":" ","kind":"text"},{"text":"ModifiedContent","kind":"identifier"}],"abstract":[{"text":"A value with a modifier applied to it.","type":"text"}],"identifier":"doc:\/\/OpenSwiftUI\/documentation\/OpenSwiftUI\/ModifiedContent","title":"ModifiedContent",