},{"text":"\n","kind":"text"}],"languages":["swift"],"platforms":["macOS"]}],"kind":"declarations"},{"parameters":[{"content":[{"inlineContent":[{"type":"text","text":"The shadow’s color."}],"type":"paragraph"}],"name":"color"},{"content":[{"type":"paragraph","inlineContent":[{"type":"text","text":"A measure of how much to blur the shadow. Larger values"},{"type":"text","text":" "},{"type":"text","text":"result in more blur."}]}],"name":"radius"},{"content":[{"type":"paragraph","inlineContent":[{"text":"An amount to offset the shadow horizontally from the view.","type":"text"}]}],"name":"x"},{"content":[{"inlineContent":[{"text":"An amount to offset the shadow vertically from the view.","type":"text"}],"type":"paragraph"}],"name":"y"}],"kind":"parameters"},{"content":[{"text":"Return Value","type":"heading","anchor":"return-value","level":2},{"inlineContent":[{"text":"A view that adds a shadow to this view.","type":"text"}],"type":"paragraph"}],"kind":"content"},{"content":[{"text":"Discussion","anchor":"discussion","type":"heading","level":2},{"type":"paragraph","inlineContent":[{"text":"Use this modifier to add a shadow of a specified color behind a view.","type":"text"},{"text":" ","type":"text"},{"text":"You can offset the shadow from its view independently in the horizontal","type":"text"},{"text":" ","type":"text"},{"text":"and vertical dimensions using the ","type":"text"},{"code":"x","type":"codeVoice"},{"text":" and ","type":"text"},{"code":"y","type":"codeVoice"},{"text":" parameters. You can also","type":"text"},{"text":" ","type":"text"},{"text":"blur the edges of the shadow using the ","type":"text"},{"code":"radius","type":"codeVoice"},{"text":" parameter. Use a","type":"text"},{"text":" ","type":"text"},{"text":"radius of zero to create a sharp shadow. Larger radius values produce","type":"text"},{"text":" ","type":"text"},{"text":"softer shadows.","type":"text"}]},{"type":"paragraph","inlineContent":[{"type":"text","text":"The example below creates a grid of boxes with varying offsets and blur."},{"type":"text","text":" "},{"type":"text","text":"Each box displays its radius and offset values for reference."}]},{"syntax":"swift","type":"codeListing","code":["struct Shadow: View {","    let steps = [0, 5, 10]","","    var body: some View {","        VStack(spacing: 50) {","            ForEach(steps, id: \\.self) { offset in","                HStack(spacing: 50) {","                    ForEach(steps, id: \\.self) { radius in","                        Color.blue","                            .shadow(","                                color: .primary,","                                radius: CGFloat(radius),","                                x: CGFloat(offset), y: CGFloat(offset))","                            .overlay {","                                VStack {","                                    Text(\"\\(radius)\")","                                    Text(\"(\\(offset), \\(offset))\")","                                }","                            }","                    }","                }","            }","        }","    }","}"]},{"type":"paragraph","inlineContent":[]},{"type":"paragraph","inlineContent":[{"text":"The example above uses ","type":"text"},{"isActive":true,"identifier":"doc:\/\/OpenSwiftUI\/documentation\/OpenSwiftUI\/Color\/primary","type":"reference"},{"text":" as the color to make the","type":"text"},{"text":" ","type":"text"},{"text":"shadow easy to see for the purpose of illustration. In practice,","type":"text"},{"text":" ","type":"text"},{"text":"you might prefer something more subtle, like ","type":"text"},{"code":"Color\/gray-8j2b","type":"codeVoice"},{"text":".","type":"text"},{"text":" ","type":"text"},{"text":"If you don’t specify a color, the method uses a semi-transparent","type":"text"},{"text":" ","type":"text"},{"text":"black.","type":"text"}]}],"kind":"content"}],"references":{"doc://OpenSwiftUI/documentation/OpenSwiftUI/View":{"title":"View","identifier":"doc:\/\/Open