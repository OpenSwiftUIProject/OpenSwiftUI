{"hierarchy":{"paths":[["doc:\/\/OpenSwiftUI\/documentation\/OpenSwiftUI","doc:\/\/OpenSwiftUI\/documentation\/OpenSwiftUI\/ViewThatFits"]]},"metadata":{"modules":[{"relatedModules":["OpenSwiftUICore"],"name":"OpenSwiftUI"}],"platforms":[{"introducedAt":"13.0","deprecated":false,"unavailable":false,"beta":false,"name":"iOS"},{"introducedAt":"10.15","deprecated":false,"unavailable":false,"beta":false,"name":"macOS"},{"introducedAt":"13.0","deprecated":false,"unavailable":false,"beta":false,"name":"tvOS"},{"introducedAt":"1.0","deprecated":false,"unavailable":false,"beta":false,"name":"visionOS"},{"introducedAt":"6.0","deprecated":false,"unavailable":false,"beta":false,"name":"watchOS"}],"fragments":[{"kind":"keyword","text":"func"},{"kind":"text","text":" "},{"kind":"identifier","text":"geometryGroup"},{"kind":"text","text":"() -> "},{"kind":"keyword","text":"some"},{"kind":"text","text":" "},{"kind":"typeIdentifier","preciseIdentifier":"s:15OpenSwiftUICore4ViewP","text":"View"}],"role":"symbol","symbolKind":"method","roleHeading":"Instance Method","extendedModule":"OpenSwiftUICore","title":"geometryGroup()","externalID":"s:15OpenSwiftUICore4ViewPAAE13geometryGroupQryF::SYNTHESIZED::s:11OpenSwiftUI12ViewThatFitsV","remoteSource":{"fileName":"RendererEffect.swift","url":"https:\/\/github.com\/OpenSwiftUIProject\/OpenSwiftUI\/blob\/main\/Sources\/OpenSwiftUICore\/Render\/RendererEffect\/RendererEffect.swift#L294"}},"variants":[{"traits":[{"interfaceLanguage":"swift"}],"paths":["\/documentation\/openswiftui\/viewthatfits\/geometrygroup()"]}],"kind":"symbol","identifier":{"interfaceLanguage":"swift","url":"doc:\/\/OpenSwiftUI\/documentation\/OpenSwiftUI\/ViewThatFits\/geometryGroup()"},"primaryContentSections":[{"kind":"declarations","declarations":[{"languages":["swift"],"platforms":["macOS"],"tokens":[{"text":"nonisolated","kind":"attribute"},{"text":" ","kind":"text"},{"text":"func","kind":"keyword"},{"text":" ","kind":"text"},{"text":"geometryGroup","kind":"identifie