{"variants":[{"paths":["\/documentation\/openswiftui\/equatableview\/geometrygroup()"],"traits":[{"interfaceLanguage":"swift"}]}],"identifier":{"url":"doc:\/\/OpenSwiftUI\/documentation\/OpenSwiftUI\/EquatableView\/geometryGroup()","interfaceLanguage":"swift"},"kind":"symbol","abstract":[{"type":"text","text":"Isolates the geometry (e.g. position and size) of the view"},{"type":"text","text":" "},{"type":"text","text":"from its parent view."}],"schemaVersion":{"major":0,"minor":3,"patch":0},"hierarchy":{"paths":[["doc:\/\/OpenSwiftUI\/documentation\/OpenSwiftUI","doc:\/\/OpenSwiftUI\/documentation\/OpenSwiftUI\/EquatableView"]]},"sections":[],"metadata":{"remoteSource":{"fileName":"RendererEffect.swift","url":"https:\/\/github.com\/OpenSwiftUIProject\/OpenSwiftUI\/blob\/main\/Sources\/OpenSwiftUICore\/Render\/RendererEffect\/RendererEffect.swift#L304"},"role":"symbol","modules":[{"name":"OpenSwiftUI","relatedModules":["OpenSwiftUICore"]}],"extendedModule":"OpenSwiftUICore","title":"geometryGroup()","platforms":[{"deprecated":false,"name":"iOS","unavailable":false,"beta":false,"introducedAt":"13.0"},{"deprecated":false,"name":"macOS","unavailable":false,"beta":false,"introducedAt":"10.15"},{"deprecated":false,"name":"tvOS","unavailable":false,"beta":false,"introducedAt":"13.0"},{"deprecated":false,"name":"visionOS","unavailable":false,"beta":false,"introducedAt":"1.0"},{"deprecated":false,"name":"watchOS","unavailable":false,"beta":false,"introducedAt":"6.0"}],"fragments":[{"kind":"keyword","text":"func"},{"kind":"text","text":" "},{"kind":"identifier","text":"geometryGroup"},{"kind":"text","text":"() -> "},{"kind":"keyword","text":"some"},{"kind":"text","text":" "},{"kind":"typeIdentifier","preciseIdentifier":"s:15OpenSwiftUICore4ViewP","text":"View"}],"externalID":"s:15OpenSwiftUICore4ViewPAAE13geometryGroupQryF::SYNTHESIZED::s:11OpenSwiftUI13EquatableViewV","roleHeading":"Instance Method","symbolKind":"method"},"primaryContentSections":[{"declarations":[{"tokens":