":"text","text":" modifier to disable animations"},{"type":"text","text":" "},{"type":"text","text":"affecting the “Animation\\nReplaced” "},{"type":"reference","isActive":true,"identifier":"doc:\/\/OpenSwiftUI\/documentation\/OpenSwiftUI\/Text"},{"type":"text","text":" view."}]}]}],"type":"unorderedList"},{"inlineContent":[{"text":"The following code implements these animations:","type":"text"}],"type":"paragraph"},{"syntax":"swift","type":"codeListing","code":["struct TransactionExample: View {","    @State var flag = false","","    var body: some View {","        VStack(spacing: 50) {","            HStack(spacing: 30) {","                Text(\"Rotation\")","                    .rotationEffect(Angle(degrees: flag ? 360 : 0))","","                Text(\"Rotation\\nModified\")","                    .rotationEffect(Angle(degrees: flag ? 360 : 0))","                    .transaction(value: flag) { t in","                        t.animation =","                            t.animation?.delay(2.0).speed(2)","                    }","","                Text(\"Animation\\nReplaced\")","                    .rotationEffect(Angle(degrees: flag ? 360 : 0))","                    .transaction(value: flag) { t in","                        t.disableAnimations = true","                    }","            }","","            Button(\"Animate\") {","                withAnimation(.easeIn(duration: 2.0)) {","                    flag.toggle()","                }","            }","        }","    }","}"]}]}],"metadata":{"extendedModule":"OpenSwiftUICore","remoteSource":{"fileName":"TransactionModifier.swift","url":"https:\/\/github.com\/OpenSwiftUIProject\/OpenSwiftUI\/blob\/main\/Sources\/OpenSwiftUICore\/Animation\/Transaction\/TransactionModifier.swift#L149"},"externalID":"s:15OpenSwiftUICore4ViewPAAE11transaction5value_Qrqd___yAA11TransactionVzctSQRd__lF::SYNTHESIZED::s:11OpenSwiftUI6ToggleV","title":"transaction(value:_:)","role":"symbol","platforms":[{"deprecated":false,"unavailable"