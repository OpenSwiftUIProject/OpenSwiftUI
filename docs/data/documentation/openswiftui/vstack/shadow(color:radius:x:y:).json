, id: \\.self) { offset in","                HStack(spacing: 50) {","                    ForEach(steps, id: \\.self) { radius in","                        Color.blue","                            .shadow(","                                color: .primary,","                                radius: CGFloat(radius),","                                x: CGFloat(offset), y: CGFloat(offset))","                            .overlay {","                                VStack {","                                    Text(\"\\(radius)\")","                                    Text(\"(\\(offset), \\(offset))\")","                                }","                            }","                    }","                }","            }","        }","    }","}"],"type":"codeListing","syntax":"swift"},{"type":"paragraph","inlineContent":[]},{"type":"paragraph","inlineContent":[{"type":"text","text":"The example above uses "},{"isActive":true,"type":"reference","identifier":"doc:\/\/OpenSwiftUI\/documentation\/OpenSwiftUI\/Color\/primary"},{"type":"text","text":" as the color to make the"},{"type":"text","text":" "},{"type":"text","text":"shadow easy to see for the purpose of illustration. In practice,"},{"type":"text","text":" "},{"type":"text","text":"you might prefer something more subtle, like "},{"type":"codeVoice","code":"Color\/gray-8j2b"},{"type":"text","text":"."},{"type":"text","text":" "},{"type":"text","text":"If you don’t specify a color, the method uses a semi-transparent"},{"type":"text","text":" "},{"type":"text","text":"black."}]}],"kind":"content"}],"abstract":[{"type":"text","text":"Adds a shadow to this view."}],"hierarchy":{"paths":[["doc:\/\/OpenSwiftUI\/documentation\/OpenSwiftUI","doc:\/\/OpenSwiftUI\/documentation\/OpenSwiftUI\/VStack"]]},"schemaVersion":{"major":0,"minor":3,"patch":0},"sections":[],"kind":"symbol","references":{"doc://OpenSwiftUI/documentation/OpenSwiftUI/VStack/shadow(color:radius:x:y:)":{"kind":"symbol","url":"\/documentation\/openswiftu