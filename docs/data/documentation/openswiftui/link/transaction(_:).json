l animations controlled by a"},{"type":"text","text":" "},{"type":"text","text":"button that executes all three animations simultaneously:"}]},{"items":[{"content":[{"type":"paragraph","inlineContent":[{"type":"text","text":"The first animation rotates the “Rotation” "},{"identifier":"doc:\/\/OpenSwiftUI\/documentation\/OpenSwiftUI\/Text","type":"reference","isActive":true},{"type":"text","text":" view by 360"},{"type":"text","text":" "},{"type":"text","text":"degrees."}]}]},{"content":[{"inlineContent":[{"text":"The second uses the ","type":"text"},{"code":"transaction(_:)","type":"codeVoice"},{"text":" modifier to change the","type":"text"},{"text":" ","type":"text"},{"text":"animation by adding a delay to the start of the animation","type":"text"},{"text":" ","type":"text"},{"text":"by two seconds and then increases the rotational speed of the","type":"text"},{"text":" ","type":"text"},{"text":"“Rotation\\nModified” ","type":"text"},{"identifier":"doc:\/\/OpenSwiftUI\/documentation\/OpenSwiftUI\/Text","isActive":true,"type":"reference"},{"text":" view animation by a factor of 2.","type":"text"}],"type":"paragraph"}]},{"content":[{"inlineContent":[{"text":"The third animation uses the ","type":"text"},{"type":"codeVoice","code":"transaction(_:)"},{"text":" modifier to","type":"text"},{"text":" ","type":"text"},{"text":"replace the rotation animation affecting the “Animation\\nReplaced”","type":"text"},{"text":" ","type":"text"},{"identifier":"doc:\/\/OpenSwiftUI\/documentation\/OpenSwiftUI\/Text","type":"reference","isActive":true},{"text":" view with a spring animation.","type":"text"}],"type":"paragraph"}]}],"type":"unorderedList"},{"type":"paragraph","inlineContent":[{"text":"The following code implements these animations:","type":"text"}]},{"type":"codeListing","syntax":"swift","code":["struct TransactionExample: View {","    @State private var flag = false","","    var body: some View {","        VStack(spacing: 50) {","            HStack(spacing: 30) {","   