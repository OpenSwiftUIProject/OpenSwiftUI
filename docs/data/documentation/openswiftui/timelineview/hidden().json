 state variable in the"},{"type":"text","text":" "},{"type":"text","text":"example above, controlled by the "},{"type":"reference","identifier":"doc:\/\/OpenSwiftUI\/documentation\/OpenSwiftUI\/Toggle","isActive":true},{"type":"text","text":" instance, OpenSwiftUI draws"},{"type":"text","text":" "},{"type":"text","text":"the circle or completely omits it from the layout."}],"type":"paragraph"},{"inlineContent":[],"type":"paragraph"}],"kind":"content"}],"identifier":{"interfaceLanguage":"swift","url":"doc:\/\/OpenSwiftUI\/documentation\/OpenSwiftUI\/TimelineView\/hidden()"},"variants":[{"paths":["\/documentation\/openswiftui\/timelineview\/hidden()"],"traits":[{"interfaceLanguage":"swift"}]}],"hierarchy":{"paths":[["doc:\/\/OpenSwiftUI\/documentation\/OpenSwiftUI","doc:\/\/OpenSwiftUI\/documentation\/OpenSwiftUI\/TimelineView"]]},"references":{"doc://OpenSwiftUI/documentation/OpenSwiftUI/View":{"title":"View","identifier":"doc:\/\/OpenSwiftUI\/documentation\/OpenSwiftUI\/View","type":"topic","kind":"symbol","fragments":[{"text":"protocol","kind":"keyword"},{"text":" ","kind":"text"},{"text":"View","kind":"identifier"}],"role":"symbol","url":"\/documentation\/openswiftui\/view","abstract":[{"text":"A type that represents part of your app’s user interface and provides","type":"text"},{"text":" ","type":"text"},{"text":"modifiers that you use to configure views.","type":"text"}],"navigatorTitle":[{"text":"View","kind":"identifier"}]},"doc://OpenSwiftUI/documentation/OpenSwiftUI/Toggle":{"kind":"symbol","type":"topic","fragments":[{"kind":"keyword","text":"struct"},{"kind":"text","text":" "},{"kind":"identifier","text":"Toggle"}],"identifier":"doc:\/\/OpenSwiftUI\/documentation\/OpenSwiftUI\/Toggle","url":"\/documentation\/openswiftui\/toggle","navigatorTitle":[{"kind":"identifier","text":"Toggle"}],"abstract":[],"role":"symbol","title":"Toggle"},"doc://OpenSwiftUI/documentation/OpenSwiftUI":{"type":"topic","identifier":"doc:\/\/OpenSwiftUI\/documentation\/OpenSwiftUI","