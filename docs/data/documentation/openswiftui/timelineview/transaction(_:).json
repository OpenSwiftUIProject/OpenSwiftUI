ontent":[{"text":"Discussion","anchor":"discussion","type":"heading","level":2},{"inlineContent":[{"text":"Use this modifier to change or replace the animation used in a view.","type":"text"},{"text":" ","type":"text"},{"text":"Consider three identical animations controlled by a","type":"text"},{"text":" ","type":"text"},{"text":"button that executes all three animations simultaneously:","type":"text"}],"type":"paragraph"},{"type":"unorderedList","items":[{"content":[{"type":"paragraph","inlineContent":[{"text":"The first animation rotates the “Rotation” ","type":"text"},{"isActive":true,"type":"reference","identifier":"doc:\/\/OpenSwiftUI\/documentation\/OpenSwiftUI\/Text"},{"text":" view by 360","type":"text"},{"text":" ","type":"text"},{"text":"degrees.","type":"text"}]}]},{"content":[{"inlineContent":[{"text":"The second uses the ","type":"text"},{"type":"codeVoice","code":"transaction(_:)"},{"text":" modifier to change the","type":"text"},{"text":" ","type":"text"},{"text":"animation by adding a delay to the start of the animation","type":"text"},{"text":" ","type":"text"},{"text":"by two seconds and then increases the rotational speed of the","type":"text"},{"text":" ","type":"text"},{"text":"“Rotation\\nModified” ","type":"text"},{"identifier":"doc:\/\/OpenSwiftUI\/documentation\/OpenSwiftUI\/Text","type":"reference","isActive":true},{"text":" view animation by a factor of 2.","type":"text"}],"type":"paragraph"}]},{"content":[{"inlineContent":[{"type":"text","text":"The third animation uses the "},{"type":"codeVoice","code":"transaction(_:)"},{"type":"text","text":" modifier to"},{"type":"text","text":" "},{"type":"text","text":"replace the rotation animation affecting the “Animation\\nReplaced”"},{"type":"text","text":" "},{"type":"reference","identifier":"doc:\/\/OpenSwiftUI\/documentation\/OpenSwiftUI\/Text","isActive":true},{"type":"text","text":" view with a spring animation."}],"type":"paragraph"}]}]},{"inlineContent":[{"type":"text","text":"The following code implements these animations:"}],"type":"paragraph"},{"syntax":"swift","code":["struct TransactionExample: View {","    @State private var flag = false","","    var body: some View {","        VStack(spacing: 50) {","            HStack(spacing: 30) {","                Text(\"Rotation\")","                    .rotationEffect(Angle(degrees:","                                            self.flag ? 360 : 0))","","                Text(\"Rotation\\nModified\")","                    .rotationEffect(Angle(degrees:","                                            self.flag ? 360 : 0))","                    .transaction { view in","                        view.animation =","                            view.animation?.delay(2.0).speed(2)","                    }","","                Text(\"Animation\\nReplaced\")","                    .rotationEffect(Angle(degrees:","                                            self.flag ? 360 : 0))","                    .transaction { view in","                        view.animation = .interactiveSpring(","                            response: 0.60,","                            dampingFraction: 0.20,","                            blendDuration: 0.25)","                    }","            }","","            Button(\"Animate\") {","                withAnimation(.easeIn(duration: 2.0)) {","                    self.flag.toggle()","                }","            }","        }","    }","}"],"type":"codeListing"},{"inlineContent":[{"type":"text","text":"Use this modifier on leaf views such as "},{"type":"reference","identifier":"doc:\/\/OpenSwiftUI\/documentation\/OpenSwiftUI\/Image","isActive":true},{"type":"text","text":" or "},{"type":"reference","identifier":"doc:\/\/OpenSwiftUI\/documentation\/OpenSwiftUI\/Button","isActive":true},{"type":"text","text":" rather"},{"type":"text","text":" "},{"type":"text","text":"than container views such as "},{"type":"reference","identifier":"doc:\/\/OpenSwiftUI\/documentation\/OpenSwiftUI\/VStack","isActive":true},{"type":"text","text":" or "},{"type":"reference","identifier":"doc:\/\/OpenSwiftUI\/documentation\/OpenSwiftUI\/HStack","isActive":true},{"type":"text","text":". The"},{"type":"text","text":" "},{"type":"text","text":"transformation applies to all child views within this view; calling"},{"type":"text","text":" "},{"type":"codeVoice","code":"transaction(_:)"},{"type":"text","text":" on a container view can lead to unbounded scope of"},{"type":"text","text":" "},{"type":"text","text":"execution depending on the depth of the view hierarchy."}],"type":"paragraph"}]}],"references":{"doc://OpenSwiftUI/documentation/OpenSwiftUI/VStack":{"kind":"symbol","fragments":[{"kind":"keyword","text":"struct"},{"kind":"text","text":" "},{"kind":"identifier","text":"VStack"}],"role":"symbol","navigatorTitle":[{"kind":"identifier","text":"VStack"}],"type":"topic","title":"VStack","abstract":[{"type":"text","text":"A view that arranges its subviews in a vertical line."}],"identifier":"doc:\/\/OpenSwiftUI\/documentation\/OpenSwiftUI\/VStack","url":"\/documentation\/openswiftui\/vstack"},"doc://OpenSwiftUI/documentation/OpenSwiftUI/Transaction":{"abstract":[{"type":"text","text":"The context of the current state-processing update."}],"role":"symbol","url":"\/documentation\/openswiftui\/transaction","type":"topic","fragments":[{"text":"struct","kind":"keyword"},{"text":" ","kind":"text"},{"text":"Transaction","kind":"identifier"}],"kind":"symbol","identifier":"doc:\/\/OpenSwiftUI\/documentation\/OpenSwiftUI\/Transaction","navigatorTitle":[{"text":"Transaction","kind":"identifier"}],"title":"Transaction"},"doc://OpenSwiftUI/documentation/OpenSwiftUI/TimelineView":{"title":"TimelineView","url":"\/documentation\/openswiftui\/timelineview","abstract":[{"type":"text","text":"A view that updates according to a schedule that you provide."}],"identifier":"doc:\/\/OpenSwiftUI\/documentation\/OpenSwiftUI\/TimelineView","fragments":[{"kind":"keyword","text":"struct"},{"kind":"text","text"