ble":false,"name":"watchOS","deprecated":false,"introducedAt":"6.0","beta":false}]},"primaryContentSections":[{"declarations":[{"tokens":[{"kind":"attribute","text":"nonisolated"},{"kind":"text","text":" "},{"kind":"keyword","text":"func"},{"kind":"text","text":" "},{"kind":"identifier","text":"background"},{"kind":"text","text":"<"},{"kind":"genericParameter","text":"V"},{"kind":"text","text":">("},{"kind":"externalParam","text":"alignment"},{"kind":"text","text":": "},{"preciseIdentifier":"s:15OpenSwiftUICore9AlignmentV","kind":"typeIdentifier","text":"Alignment","identifier":"doc:\/\/OpenSwiftUI\/documentation\/OpenSwiftUI\/Alignment"},{"kind":"text","text":" = .center, "},{"kind":"attribute","text":"@"},{"preciseIdentifier":"s:15OpenSwiftUICore11ViewBuilderV","kind":"attribute","text":"ViewBuilder","identifier":"doc:\/\/OpenSwiftUI\/documentation\/OpenSwiftUI\/ViewBuilder"},{"kind":"text","text":" "},{"kind":"externalParam","text":"content"},{"kind":"text","text":": () -> "},{"kind":"typeIdentifier","text":"V"},{"kind":"text","text":") -> "},{"kind":"keyword","text":"some"},{"kind":"text","text":" "},{"preciseIdentifier":"s:15OpenSwiftUICore4ViewP","kind":"typeIdentifier","text":"View","identifier":"doc:\/\/OpenSwiftUI\/documentation\/OpenSwiftUI\/View"},{"kind":"text","text":" "},{"kind":"keyword","text":"where"},{"kind":"text","text":" "},{"kind":"typeIdentifier","text":"V"},{"kind":"text","text":" : "},{"preciseIdentifier":"s:15OpenSwiftUICore4ViewP","kind":"typeIdentifier","text":"View","identifier":"doc:\/\/OpenSwiftUI\/documentation\/OpenSwiftUI\/View"},{"kind":"text","text":"\n"}],"platforms":["macOS"],"languages":["swift"]}],"kind":"declarations"},{"parameters":[{"name":"alignment","content":[{"type":"paragraph","inlineContent":[{"type":"text","text":"The alignment that the modifier uses to position the"},{"type":"text","text":" "},{"type":"text","text":"implicit "},{"type":"reference","identifier":"doc:\/\/OpenSwiftUI\/documentation\/OpenSwiftUI\/ZStack","isActive":true},{"type":"text","text":" that groups the background views. The default"},{"type":"text","text":" "},{"type":"text","text":"is "},{"type":"reference","identifier":"doc:\/\/OpenSwiftUI\/documentation\/OpenSwiftUI\/Alignment\/center","isActive":true},{"type":"text","text":"."}]}]},{"name":"content","content":[{"inlineContent":[{"type":"text","text":"A "},{"type":"reference","identifier":"doc:\/\/OpenSwiftUI\/documentation\/OpenSwiftUI\/ViewBuilder","isActive":true},{"type":"text","text":" that you use to declare the views to draw"},{"type":"text","text":" "},{"type":"text","text":"behind this view, stacked in a cascading order from bottom to top."},{"type":"text","text":" "},{"type":"text","text":"The last view that you list appears at the front of the stack."}],"type":"paragraph"}]}],"kind":"parameters"},{"kind":"content","content":[{"level":2,"text":"Return Value","anchor":"return-value","type":"heading"},{"type":"paragraph","inlineContent":[{"text":"A view that uses the specified content as a background.","type":"text"}]}]},{"kind":"content","content":[{"type":"heading","anchor":"discussion","level":2,"text":"Discussion"},{"inlineContent":[{"text":"Use this modifier to place one or more views behind another view.","type":"text"},{"text":" ","type":"text"},{"text":"For example, you can place a collection of stars beind a ","type":"text"},{"identifier":"doc:\/\/OpenSwiftUI\/documentation\/OpenSwiftUI\/Text","type":"reference","isActive":true},{"text":" view:","type":"text"}],"type":"paragraph"},{"code":["Text(\"ABCDEF\")","    .background(alignment: .leading) { Star(color: .red) }","    .background(alignment: .center) { Star(color: .green) }","    .background(alignment: .trailing) { Star(color: .blue) }"],"type":"codeListing","syntax":"swift"},{"inlineContent":[{"type":"text","text":"The example above assumes that you’ve defined a "},{"code":"Star","type":"codeVoice"},{"type":"text","text":" view with a"},{"type":"text","text":" "},{"type":"text","text":"parameterized color:"}],"type":"paragraph"},{"code":["struct Star: View {","    var color: Color","","    var body: some View {","        Image(systemName: \"star.fill\")","            .foregroundStyle(color)","    }","}"],"type":"codeListing","syntax":"swift"},{"inlineContent":[{"text":"By setting different ","type":"text"},{"code":"alignment","type":"codeVoice"},{"text":" values for each modifier, you make the","type":"text"},{"text":" ","type":"text"},{"text":"stars appear in different places behind the text:","type":"text"}],"type":"paragraph"},{"inlineContent":[],"type":"paragraph"},{"inlineContent":[{"text":"If you specify more than one view in the ","type":"text"},{"code":"content","type":"codeVoice"},{"text":" closure, the modifier","type":"text"},{"text":" ","type":"text"},{"text":"collects all of the views in the closure into an implicit ","type":"text"},{"identifier":"doc:\/\/OpenSwiftUI\/documentation\/OpenSwiftUI\/ZStack","isActive":true,"type":"reference"},{"text":",","type":"text"},{"text":" ","type":"text"},{"text":"taking them in order from back to front. For example, you can layer a","type":"text"},{"text":" ","type":"text"},{"text":"vertical bar behind a circle, with both of those behind a horizontal","type":"text"},{"text":" ","type":"text"},{"text":"bar:","type":"text"}],"type":"paragraph"},{"code":["Color.blue","    .frame(width: 200, height: 10) \/\/ Creates a horizontal bar.","    .background {","        Color.green","            .frame(width: 10, height: 100) \/\/ Creates a vertical bar.","        Circle()","            .frame(width: 50, height: 50)","    }"],"type":"codeListing","syntax":"swift"},{"inlineContent":[{"text":"Both the background modifier and the implicit ","type":"text"},{"identifier":"doc:\/\/OpenSwiftUI\/documentation\/OpenSwiftUI\/ZStack","type":"reference","isActive":true},{"text":" composed from","type":"text"},{"text":" ","type":"text"},{"text":"the background content — the circle and the vertical bar — use a","type":"text"},{"text":" ","type":"text"},{"text":"default ","type":"text"},{"identifier":"doc:\/\/OpenSwiftUI\/documentation\/OpenSwiftUI\/Alignment\/center","type":"reference","isActive":true},{"text":" alignment. The vertical bar appears","type":"text"},{"text":" ","type":"text"},{"text":"centered behind the circle, and both appear as a composite view centered","type":"text"},{"text":" ","type":"text"},{"text":"behind the horizontal bar:","type":"text"}],"type":"paragraph"},{"inlineContent":[],"type":"paragraph"},{"inlineContent":[{"type":"text","text":"If you specify an alignment for the background, it applies to the"},{"type":"text","text":" "},{"type":"text","text":"implicit stack rather than to the individual views in the closure. You"},{"type":"text","text":" "},{"type":"text","text":"can see this if you add the "},{"identifier":"doc:\/\/OpenSwiftUI\/documentation\/OpenSwiftUI\/Alignment\/leading","isActive":true,"type":"reference"},{"type":"text","text":" alignment:"}],"type":"paragraph"},{"code":["Color.blue","    .frame(width: 200, height: 10)","    .background(alignment: .leading) {","        Color.green","            .frame(width: 10, height: 100)","        Circle()","            .frame(width: 50, height: 50)","    }"],"type":"codeListing","syntax":"swift"},{"inlineContent":[{"type":"text","text":"The vertical bar and the circle move as a unit to align the stack"},{"type":"text","text":" "},{"type":"text","text":"with the leading edge of the horizontal bar, while the"},{"type":"text","text":" "},{"type":"text","text":"vertical bar remains centered on the circle:"}],"type":"paragraph"},{"inlineContent":[],"type":"paragraph"},{"inlineContent":[{"text":"To control the placement of individual items inside the ","type":"text"},{"code":"content","type":"codeVoice"},{"text":" ","type":"text"},{"text":"closure, either use a different background modifier for each item, as","type":"text"},{"text":" ","type":"text"},{"text":"the earlier example of stars under text demonstrates, or add an explicit","type":"text"},{"text":" ","type":"text"},{"identifier":"doc:\/\/OpenSwiftUI\/documentation\/OpenSwiftUI\/ZStack","isActive":true,"type":"reference"},{"text":" inside the content closure with its own alignment:","type":"text"}],"type":"paragraph"},{"code":["Color.blue","    .frame(width: 200, height: 10)","    .background(alignment: .leading) {","        ZStack(alignment: .leading) {","            Color.green","                .frame(width: 10, height: 100)","            Circle()","                .frame(width: 50, height: 50)","        }","    }"],"type":"codeListing","syntax":"swift"},{"inlineContent":[{"type":"text","text":"The stack alignment ensures that the circle’s leading edge aligns with"},{"type":"text","text":" "},{"type":"text","text":"the vertical bar’s, while the background modifier aligns the composite"},{"type":"text","text":" "},{"type":"text","text":"view with the horizontal bar:"}],"type":"paragraph"},{"inlineContent":[],"type":"paragraph"},{"inlineContent":[{"text":"You can achieve layering without a background modifier by putting both","type":"text"},{"text":" ","type":"text"},{"text":"the modified view and the background content into a ","type":"text"},{"isActive":true,"identifier":"doc:\/\/OpenSwiftUI\/documentation\/OpenSwiftUI\/ZStack","type":"reference"},{"text":". This","type":"text"},{"text":" ","type":"text"},{"text":"produces a simpler view hierarchy, but it changes the layout priority","type":"text"},{"text":" ","type":"text"},{"text":"that OpenSwiftUI applies to the views. Use the background modifier when you","type":"text"},{"text":" ","type":"text"},{"text":"want the modified view to dominate the layout.","type":"text"}],"type":"paragraph"},{"inlineContent":[{"text":"If you want to specify a ","type":"text"},{"identifier":"doc:\/\/OpenSwiftUI\/documentation\/OpenSwiftUI\/ShapeStyle","isActive":true,"type":"reference"},{"text":" like a","type":"text"},{"text":" ","type":"text"},{"identifier":"doc:\/\/OpenSwiftUI\/documentation\/OpenSwiftUI\/HierarchicalShapeStyle","isActive":true,"type":"reference"},{"text":" or a ","type":"text"},{"identifier":"doc:\/\/OpenSwiftUI\/documentation\/OpenSwiftUI\/Material","isActive":true,"type":"reference"},{"text":" as the background, use","type":"text"},{"text":" ","type":"text"},{"code":"View\/background(_:ignoresSafeAreaEdges:)","type":"codeVoice"},{"text":" instead.","type":"text"},{"text":" ","type":"text"},{"text":"To specify a ","type":"text"},{"identifier":"doc:\/\/OpenSwiftUI\/documentation\/OpenSwiftUI\/Shape","isActive":true,"type":"reference"},{"text":" or ","type":"text"},{"identifier":"doc:\/\/OpenSwiftUI\/documentation\/OpenSwiftUI\/InsettableShape","isActive":true,"type":"reference"},{"text":", use","type":"text"},{"text":" ","type":"text"},{"code":"View\/background(_:in:fillStyle:)","type":"codeVoice"},{"text":".","type":"text"},{"text":" ","type":"text"},{"text":"To configure the background of a presentation, like a sheet, use","type":"text"},{"text":" ","type":"text"},{"code":"View\/presentationBackground(alignment:content:)","type":"codeVoice"},{"text":".","type":"text"}],"type":"paragraph"}]}],"abstract":[{"text":"Layers the views that you specify behind this view.","type":"text"}],"identifier":{"url":"doc:\/\/OpenSwiftUI\/documentation\/OpenSwiftUI\/FillShapeView\/background(alignment:content:)","interfaceLanguage":"swift"},"schemaVersion":{"patch":0,"major":0,"minor":3},"references":{"doc://OpenSwiftUI/documentation/OpenSwiftUI/FillShapeView/background(alignment:content:)":{"type":"topic","url":"\/documentation\/openswiftui\/fillshapeview\/background(alignment:content:)","identifier":"doc:\/\/OpenSwiftUI\/documentation\/OpenSwiftUI\/FillShapeView\/background(alignment:content:)","role":"symbol","kind":"symbol","abstract":[{"type":"text","text":"Layers the views that you specify behind this view."}],"title":"background(alignment:content:)","fragments":[{"kind":"keyword","text":"func"},{"kind":"text","text":" "}