{"sections":[],"primaryContentSections":[{"kind":"declarations","declarations":[{"platforms":["macOS"],"languages":["swift"],"tokens":[{"kind":"attribute","text":"nonisolated"},{"kind":"text","text":" "},{"kind":"keyword","text":"func"},{"kind":"text","text":" "},{"kind":"identifier","text":"transaction"},{"kind":"text","text":"("},{"kind":"externalParam","text":"_"},{"kind":"text","text":" "},{"kind":"internalParam","text":"transform"},{"kind":"text","text":": "},{"kind":"keyword","text":"@escaping"},{"kind":"text","text":" ("},{"kind":"keyword","text":"inout"},{"kind":"text","text":" "},{"preciseIdentifier":"s:15OpenSwiftUICore11TransactionV","kind":"typeIdentifier","text":"Transaction","identifier":"doc:\/\/OpenSwiftUI\/documentation\/OpenSwiftUI\/Transaction"},{"kind":"text","text":") -> "},{"preciseIdentifier":"s:s4Voida","kind":"typeIdentifier","text":"Void"},{"kind":"text","text":") -> "},{"kind":"keyword","text":"some"},{"kind":"text","text":" "},{"preciseIdentifier":"s:15OpenSwiftUICore4ViewP","kind":"typeIdentifier","text":"View","identifier":"doc:\/\/OpenSwiftUI\/documentation\/OpenSwiftUI\/View"},{"text":"\n","kind":"text"}]}]},{"kind":"parameters","parameters":[{"name":"transform","content":[{"inlineContent":[{"type":"text","text":"The transformation to apply to transactions"},{"type":"text","text":" "},{"type":"text","text":"within this view."}],"type":"paragraph"}]}]},{"kind":"content","content":[{"level":2,"text":"Return Value","type":"heading","anchor":"return-value"},{"inlineContent":[{"type":"text","text":"A view that wraps this view and applies a transformation to"},{"type":"text","text":" "},{"type":"text","text":"all transactions used within the view."}],"type":"paragraph"}]},{"kind":"content","content":[{"anchor":"discussion","level":2,"type":"heading","text":"Discussion"},{"type":"paragraph","inlineContent":[{"text":"Use this modifier to change or replace the animation used in a view.","type":"text"},{"text":" ","type":"text"},{"text":"Consider three identical animations controlled by a","type":"text"},{"text":" ","type":"text"},{"text":"button that executes all three animations simultaneously:","type":"text"}]},{"items":[{"content":[{"inlineContent":[{"text":"The first animation rotates the “Rotation” ","type":"text"},{"identifier":"doc:\/\/OpenSwiftUI\/documentation\/OpenSwiftUI\/Text","isActive":true,"type":"reference"},{"text":" view by 360","type":"text"},{"text":" ","type":"text"},{"text":"degrees.","type":"text"}],"type":"paragraph"}]},{"content":[{"type":"paragraph","inlineContent":[{"type":"text","text":"The second uses the "},{"type":"codeVoice","code":"transaction(_:)"},{"type":"text","text":" modifier to change the"},{"type":"text","text":" "},{"type":"text","text":"animation by adding a delay to the start of the animation"},{"type":"text","text":" "},{"type":"text","text":"by two seconds and then increases the rotational speed of the"},{"type":"text","text":" "},{"type":"text","text":"“Rotation\\nModified” "},{"isActive":true,"type":"reference","identifier":"doc:\/\/OpenSwiftUI\/documentation\/OpenSwiftUI\/Text"},{"type":"text","text":" view animation by a factor of 2."}]}]},{"content":[{"inlineContent":[{"text":"The third animation uses the ","type":"text"},{"type":"codeVoice","code":"transaction(_:)"},{"text":" modifier to","type":"text"},{"text":" ","type":"text"},{"text":"replace the rotation animation affecting the “Animation\\nReplaced”","type":"text"},{"text":" ","type":"text"},{"identifier":"doc:\/\/OpenSwiftUI\/documentation\/OpenSwiftUI\/Text","type":"reference","isActive":true},{"text":" view with a spring animation.","type":"text"}],"type":"paragraph"}]}],"type":"unorderedList"},{"type":"paragraph","inlineContent":[{"text":"The following code implements these animations:","type":"text"}]},{"syntax":"swift","code":["struct TransactionExample: View {","    @State private var flag = false","","    var body: some View {","        VStack(spacing: 50) {","            HStack(spacing: 30) {","                Text(\"Rotation\")","                    .rotationEffect(Angle(degrees:","                                            self.flag ? 360 : 0))","","                Text(\"Rotation\\nModified\")","                    .rotationEffect(Angle(degrees:","                                            self.flag ? 360 : 0))","                    .transaction { view in","                        view.animation =","                            view.animation?.delay(2.0).speed(2)","                    }","","                Text(\"Animation\\nReplaced\")","                    .rotationEffect(Angle(degrees:","                                            self.flag ? 360 : 0))","                    .transaction { view in","                        view.animation = .interactiveSpring(","                            response: 0.60,","                            dampingFraction: 0.20,","                            blendDuration: 0.25)","                    }","            }","","            Button(\"Animate\") {","                withAnimation(.easeIn(duration: 2.0)) {","                    self.flag.toggle()","                }","            }","        }","    }","}"],"type":"codeListing"},{"type":"paragraph","inlineContent":[{"text":"Use this modifier on leaf views such as ","type":"text"},{"identifier":"doc:\/\/OpenSwiftUI\/documentation\/OpenSwiftUI\/Image","isActive":true,"type":"reference"},{"text":" or ","type":"text"},{"identifier":"doc:\/\/OpenSwiftUI\/documentation\/OpenSwiftUI\/Button","isActive":true,"type":"reference"},{"text":" rather","type":"text"},{"text":" ","type":"text"},{"text":"than container views such as ","type":"text"},{"identifier":"doc:\/\/OpenSwiftUI\/documentation\/OpenSwiftUI\/VStack","isActive":true,"type":"reference"},{"text":" or ","type":"text"},{"identifier":"doc:\/\/OpenSwiftUI\/documentation\/OpenSwiftUI\/HStack","isActive":true,"type":"reference"},{"text":". The","type":"text"},{"text":" ","type":"text"},{"text":"transformation applies to all child views within this view; calling","type":"text"},{"text":" ","type":"text"},{"type":"codeVoice","code":"transaction(_:)"},{"text":" on a container view can lead to unbounded scope of","type":"text"},{"text":" ","type":"text"},{"text":"execution depending on the depth of the view hierarchy.","type":"text"}]}]}],"schemaVersion":{"patch":0,"major":0,"minor":3},"identifier":{"interfaceLanguage":"swift","url":"doc:\/\/OpenSwiftUI\/documentation\/OpenSwiftUI\/Capsule\/transaction(_:)"},"hierarchy":{"paths":[["doc:\/\/OpenSwiftUI\/documentation\/OpenSwiftUI","doc:\/\/OpenSwiftUI\/documentation\/OpenSwiftUI\/Capsule"]]},"metadata":{"role":"symbol","roleHeading":"Instance Method","modules":[{"name":"OpenSwiftUI","relatedModules":["OpenSwiftUICore"]}],"title":"transaction(_:)","externalID":"s:15OpenSwiftUICore4ViewPAAE11transactionyQryAA11TransactionVzcF::SYNTHESIZED::s:15OpenSwiftUICore7CapsuleV","platforms":[{"name":"iOS","introducedAt":"13.0","deprecated":false,"unavailable":false,"beta":false},{"name":"macOS","introducedAt":"10.15","deprecated":false,"unavailable":false,"beta":false},{"name":"tvOS","introducedAt":"13.0","deprecated":false,"unavailable":false,"beta":false},{"name":"visionOS","introducedAt":"1.0","deprecated":false,"unavailable":false,"beta":false},{"name":"watchOS","introducedAt":"6.0","deprecated":false,"unavailable":false,"beta":false}],"fragments":[{"text":"func","kind":"keyword"},{"text":" ","kind":"text"},{"text":"transaction","kind":"identifier"},{"text":"((","kind":"text"},{"text":"inout","kind":"keyword"},{"text":" ","kind":"text"},{"text":"Transaction","preciseIdentifier":"s:15OpenSwiftUICore11TransactionV","kind":"typeIdentifier"},{"text":") -> ","kind":"text"},{"text":"Void","preciseIdentifier":"s:s4Voida","kind":"typeIdentifier"},{"text":") -> ","kind":"text"},{"text":"some","kind":"keyword"},{"text":" ","kind":"text"},{"text":"View","preciseIdentifier":"s:15OpenSwiftUICore4ViewP","kind":"typeIdentifier"}],"symbolKind":"method"