ith varying offsets and blur."},{"type":"text","text":" "},{"text":"Each box displays its radius and offset values for reference.","type":"text"}]},{"type":"codeListing","syntax":"swift","code":["struct Shadow: View {","    let steps = [0, 5, 10]","","    var body: some View {","        VStack(spacing: 50) {","            ForEach(steps, id: \\.self) { offset in","                HStack(spacing: 50) {","                    ForEach(steps, id: \\.self) { radius in","                        Color.blue","                            .shadow(","                                color: .primary,","                                radius: CGFloat(radius),","                                x: CGFloat(offset), y: CGFloat(offset))","                            .overlay {","                                VStack {","                                    Text(\"\\(radius)\")","                                    Text(\"(\\(offset), \\(offset))\")","                                }","                            }","                    }","                }","            }","        }","    }","}"]},{"type":"paragraph","inlineContent":[]},{"type":"paragraph","inlineContent":[{"type":"text","text":"The example above uses "},{"isActive":true,"identifier":"doc:\/\/OpenSwiftUI\/documentation\/OpenSwiftUI\/Color\/primary","type":"reference"},{"type":"text","text":" as the color to make the"},{"type":"text","text":" "},{"type":"text","text":"shadow easy to see for the purpose of illustration. In practice,"},{"type":"text","text":" "},{"type":"text","text":"you might prefer something more subtle, like "},{"code":"Color\/gray-8j2b","type":"codeVoice"},{"type":"text","text":"."},{"type":"text","text":" "},{"type":"text","text":"If you don’t specify a color, the method uses a semi-transparent"},{"type":"text","text":" "},{"type":"text","text":"black."}]}]}],"references":{"doc://OpenSwiftUI/documentation/OpenSwiftUI":{"type":"topic","identifier":"doc:\/\/OpenSwiftUI\/documentation\/OpenSwiftUI","