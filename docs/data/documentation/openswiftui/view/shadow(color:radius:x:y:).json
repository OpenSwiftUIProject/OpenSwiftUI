enSwiftUICore"]}],"title":"shadow(color:radius:x:y:)"},"hierarchy":{"paths":[["doc:\/\/OpenSwiftUI\/documentation\/OpenSwiftUI","doc:\/\/OpenSwiftUI\/documentation\/OpenSwiftUI\/View"]]},"kind":"symbol","abstract":[{"type":"text","text":"Adds a shadow to this view."}],"schemaVersion":{"major":0,"patch":0,"minor":3},"primaryContentSections":[{"declarations":[{"tokens":[{"text":"nonisolated","kind":"attribute"},{"text":" ","kind":"text"},{"text":"func","kind":"keyword"},{"text":" ","kind":"text"},{"text":"shadow","kind":"identifier"},{"text":"(","kind":"text"},{"text":"color","kind":"externalParam"},{"text":": ","kind":"text"},{"text":"Color","preciseIdentifier":"s:15OpenSwiftUICore5ColorV","identifier":"doc:\/\/OpenSwiftUI\/documentation\/OpenSwiftUI\/Color","kind":"typeIdentifier"},{"text":" = Color(.sRGBLinear, white: 0, opacity: 0.33), ","kind":"text"},{"text":"radius","kind":"externalParam"},{"text":": ","kind":"text"},{"text":"CGFloat","preciseIdentifier":"s:14CoreFoundation7CGFloatV","kind":"typeIdentifier"},{"text":", ","kind":"text"},{"text":"x","kind":"externalParam"},{"text":": ","kind":"text"},{"text":"CGFloat","preciseIdentifier":"s:14CoreFoundation7CGFloatV","kind":"typeIdentifier"},{"text":" = 0, ","kind":"text"},{"text":"y","kind":"externalParam"},{"text":": ","kind":"text"},{"text":"CGFloat","preciseIdentifier":"s:14CoreFoundation7CGFloatV","kind":"typeIdentifier"},{"text":" = 0) -> ","kind":"text"},{"text":"some","kind":"keyword"},{"text":" ","kind":"text"},{"text":"View","preciseIdentifier":"s:15OpenSwiftUICore4ViewP","identifier":"doc:\/\/OpenSwiftUI\/documentation\/OpenSwiftUI\/View","kind":"typeIdentifier"},{"text":"\n","kind":"text"}],"platforms":["macOS"],"languages":["swift"]}],"kind":"declarations"},{"parameters":[{"content":[{"inlineContent":[{"type":"text","text":"The shadow’s color."}],"type":"paragraph"}],"name":"color"},{"content":[{"type":"paragraph","inlineContent":[{"text":"A measure of how much to blur the shadow. Larger values","type":"text"},{"text":" ","type":"text"},{"text":"result in more blur.","type":"text"}]}],"name":"radius"},{"content":[{"type":"paragraph","inlineContent":[{"type":"text","text":"An amount to offset the shadow horizontally from the view."}]}],"name":"x"},{"content":[{"inlineContent":[{"text":"An amount to offset the shadow vertically from the view.","type":"text"}],"type":"paragraph"}],"name":"y"}],"kind":"parameters"},{"content":[{"anchor":"return-value","type":"heading","level":2,"text":"Return Value"},{"inlineContent":[{"type":"text","text":"A view that adds a shadow to this view."}],"type":"paragraph"}],"kind":"content"},{"content":[{"type":"heading","anchor":"discussion","level":2,"text":"Discussion"},{"type":"paragraph","inlineContent":[{"type":"text","text":"Use this modifier to add a shadow of a specified color behind a view."},{"type":"text","text":" "},{"type":"text","text":"You can offset the shadow from its view independently in the horizontal"},{"type":"text","text":" "},{"type":"text","text":"and vertical dimensions using the "},{"type":"codeVoice","code":"x"},{"type":"text","text":" and "},{"type":"codeVoice","code":"y"},{"type":"text","text":" parameters. You can also"},{"type":"text","text":" "},{"type":"text","text":"blur the edges of the shadow using the "},{"type":"codeVoice","code":"radius"},{"type":"text","text":" parameter. Use a"},{"type":"text","text":" "},{"type":"text","text":"radius of zero to create a sharp shadow. Larger radius values produce"},{"type":"text","text":" "},{"type":"text","text":"softer shadows."}]},{"type":"paragraph","inlineContent":[{"type":"text","text":"The example below creates a grid of boxes with varying offsets and blur."},{"type":"text","text":" "},{"type":"text","text":"Each box displays its radius and offset values for reference."}]},{"type":"codeListing","syntax":"swift","code":["struct Shadow: View {","    let steps = [0, 5, 10]","","    var body: some View {","        VStack(spacing: 50) {","            ForEach(steps, id: \\.self) { offset in","                HStack(spacing: 50) {","                    ForEach(steps, id: \\.self) { radius in","                        Color.blue","                            .shadow(","                                color: .primary,","                                radius: CGFloat(radius),","                                x: CGFloat(offset), y: CGFloat(offset))","                            .overlay {","                                VStack {","                                    Text(\"\\(radius)\")","                                    Text(\"(\\(offset), \\(offset))\")","                                }","                            }","                    }","                }","            }","        }","    }","}"]},{"type":"paragraph","inlineContent":[]},{"type":"paragraph","inlineContent":[{"text":"The example above uses ","type":"text"},{"type":"reference","identifier":"doc:\/\/OpenSwiftUI\/documentation\/OpenSwiftUI\/Color\/primary","isActive":true},{"text":" as the color to make the","type":"text"},{"text":" ","type":"text"},{"text":"shadow easy to see for the purpose of illustration. In practice,","type":"text"},{"text":" ","type":"text"},{"text":"you might prefer something more subtle, like ","type":"text"},{"type":"codeVoice","code":"Color\/gray-8j2b"},{"text":".","type":"text"},{"text":" ","type":"text"},{"text":"If you don’t specify a color, the method uses a semi-transparent","type":"text"},{"text":" ","type":"text"},{"text":"black.","type":"text"}]}],"kind":"content"}],"variants":[{"traits":[{"interfaceLanguage":"swift"}],"paths":["\/documentation\/openswiftui\/view\/shadow(color:radius:x:y:)"]}],"identifier":{"interfaceLanguage":"swift","url":"doc:\/\/OpenSwiftUI\/documentation\/OpenSwiftUI\/View\/shadow(color:radius:x:y:)"},"references":{"doc://OpenSwiftUI/documentation/OpenSwiftUI/View":{"title":"View","identifier":"doc:\/\/OpenSwiftUI\/documentation\/OpenSwiftUI\/View","type":"topic","kind":"symbol","fragments"