 var body: some View {","        VStack(spacing: 50) {","            ForEach(steps, id: \\.self) { offset in","                HStack(spacing: 50) {","                    ForEach(steps, id: \\.self) { radius in","                        Color.blue","                            .shadow(","                                color: .primary,","                                radius: CGFloat(radius),","                                x: CGFloat(offset), y: CGFloat(offset))","                            .overlay {","                                VStack {","                                    Text(\"\\(radius)\")","                                    Text(\"(\\(offset), \\(offset))\")","                                }","                            }","                    }","                }","            }","        }","    }","}"],"syntax":"swift"},{"inlineContent":[],"type":"paragraph"},{"inlineContent":[{"type":"text","text":"The example above uses "},{"isActive":true,"type":"reference","identifier":"doc:\/\/OpenSwiftUI\/documentation\/OpenSwiftUI\/Color\/primary"},{"type":"text","text":" as the color to make the"},{"type":"text","text":" "},{"type":"text","text":"shadow easy to see for the purpose of illustration. In practice,"},{"type":"text","text":" "},{"type":"text","text":"you might prefer something more subtle, like "},{"type":"codeVoice","code":"Color\/gray-8j2b"},{"type":"text","text":"."},{"type":"text","text":" "},{"type":"text","text":"If you don’t specify a color, the method uses a semi-transparent"},{"type":"text","text":" "},{"type":"text","text":"black."}],"type":"paragraph"}]}],"variants":[{"paths":["\/documentation\/openswiftui\/buttonstyleconfiguration\/label-swift.struct\/shadow(color:radius:x:y:)"],"traits":[{"interfaceLanguage":"swift"}]}],"metadata":{"remoteSource":{"fileName":"ShadowEffect.swift","url":"https:\/\/github.com\/OpenSwiftUIProject\/OpenSwiftUI\/blob\/main\/Sources\/OpenSwiftUICore\/Render\/RendererEffect\/ShadowEffect.swift#L153"