wiftUI\/WindowGroup\/init(content:)","kind":"symbol","role":"symbol"},"doc://OpenSwiftUI/documentation/OpenSwiftUI/View":{"title":"View","identifier":"doc:\/\/OpenSwiftUI\/documentation\/OpenSwiftUI\/View","type":"topic","kind":"symbol","fragments":[{"text":"protocol","kind":"keyword"},{"text":" ","kind":"text"},{"text":"View","kind":"identifier"}],"role":"symbol","url":"\/documentation\/openswiftui\/view","abstract":[{"text":"A type that represents part of your app’s user interface and provides","type":"text"},{"text":" ","type":"text"},{"text":"modifiers that you use to configure views.","type":"text"}],"navigatorTitle":[{"text":"View","kind":"identifier"}]},"doc://OpenSwiftUI/documentation/OpenSwiftUI/WindowGroup/Scene-Implementations":{"kind":"article","url":"\/documentation\/openswiftui\/windowgroup\/scene-implementations","title":"Scene Implementations","identifier":"doc:\/\/OpenSwiftUI\/documentation\/OpenSwiftUI\/WindowGroup\/Scene-Implementations","role":"collectionGroup","type":"topic","abstract":[]},"https://developer.apple.com/documentation/bundleresources/information_property_list/uiapplicationscenemanifest":{"titleInlineContent":[{"text":"UIApplicationSceneManifest","type":"text"}],"url":"https:\/\/developer.apple.com\/documentation\/bundleresources\/information_property_list\/uiapplicationscenemanifest","type":"link","identifier":"https:\/\/developer.apple.com\/documentation\/bundleresources\/information_property_list\/uiapplicationscenemanifest","title":"UIApplicationSceneManifest"}}}